<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:job="http://www.dangdang.com/schema/ddframe/job"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.dangdang.com/schema/ddframe/job
       http://www.dangdang.com/schema/ddframe/job/job.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder file-encoding="UTF-8"
                                  location="classpath*:example/local-sch-ej-example.properties"/>

    <job:simple id="simpleJob"
                class="com.ysu.zyw.tc.components.sch.ej.job.TcSimpleJob"
                description="简单任务"
                registry-center-ref="regCenter"
                overwrite="true"
                cron="0/10 * * * * ?"
                sharding-total-count="3"
                sharding-item-parameters="0=世界,1=你,2=好"
                job-parameter="你好世界">
        <job:listener class="com.ysu.zyw.tc.components.sch.ej.job.TcSimpleJobListener"/>
    </job:simple>

    <job:dataflow id="dataflowJob"
                  class="com.ysu.zyw.tc.components.sch.ej.job.TcDataflowJob"
                  registry-center-ref="regCenter"
                  overwrite="true"
                  cron="0/10 * * * * ?"
                  sharding-total-count="3"
                  sharding-item-parameters="0=A,1=B,2=C"
                  streaming-process="false"/>

</beans>