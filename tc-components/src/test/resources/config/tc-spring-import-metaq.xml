<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder file-encoding="UTF-8"
                                  location="classpath*:example/local-mq-metaq-example.properties"/>


    <bean id="tcLogRealTimeComputationTopic" parent="defaultAbstractTopic"
          class="com.taobao.metamorphosis.client.extension.spring.MetaqTopic">
        <property name="topic" value="#{T(com.ysu.zyw.tc.components.mq.metaq.MetaqTest).TOPIC_LOG}"/>
        <property name="group" value="#{T(com.ysu.zyw.tc.components.mq.metaq.MetaqTest).GROUP_REAL_TIME_COMPUTATION}"/>
        <property name="maxBufferSize" value="4096"/>
    </bean>

    <bean id="tcLogRealTimeComputationListener"
          class="com.ysu.zyw.tc.components.mq.metaq.subcribers.TcLogRealTimeComputationListener">
        <property name="name" value="#{T(com.ysu.zyw.tc.components.mq.metaq.MetaqTest).TOPIC_LOG}"/>
        <property name="processThreads" value="10"/>
        <property name="rethrowException" value="false"/>
    </bean>


    <bean id="tcLogDataStorageTopic" parent="defaultAbstractTopic"
          class="com.taobao.metamorphosis.client.extension.spring.MetaqTopic">
        <property name="topic" value="#{T(com.ysu.zyw.tc.components.mq.metaq.MetaqTest).TOPIC_LOG}"/>
        <property name="group" value="#{T(com.ysu.zyw.tc.components.mq.metaq.MetaqTest).GROUP_DATA_STORAGE}"/>
        <property name="maxBufferSize" value="8192"/>
    </bean>

    <bean id="tcLogDataStorageListener"
          class="com.ysu.zyw.tc.components.mq.metaq.subcribers.TcLogDataStorageListener">
        <property name="name" value="#{T(com.ysu.zyw.tc.components.mq.metaq.MetaqTest).TOPIC_LOG}"/>
        <property name="processThreads" value="10"/>
        <property name="rethrowException" value="false"/>
    </bean>


    <bean id="tcApiCallTopic" parent="defaultAbstractTopic"
          class="com.taobao.metamorphosis.client.extension.spring.MetaqTopic">
        <property name="topic" value="#{T(com.ysu.zyw.tc.components.mq.metaq.MetaqTest).TOPIC_API_CALL}"/>
        <property name="group" value="#{T(com.ysu.zyw.tc.components.mq.metaq.MetaqTest).GROUP_DATA_STORAGE}"/>
        <property name="fetchRunnerCount" value="8"/>
        <property name="maxBufferSize" value="2048"/>
        <property name="alwaysConsumeFromMaxOffset" value="true"/>
    </bean>

    <bean id="tcApiCallListener" class="com.ysu.zyw.tc.components.mq.metaq.subcribers.TcApiCallListener">
        <property name="name" value="#{T(com.ysu.zyw.tc.components.mq.metaq.MetaqTest).TOPIC_API_CALL}"/>
        <property name="processThreads" value="10"/>
        <property name="rethrowException" value="false"/>
    </bean>


    <bean id="metaQueueMessageSubcribers" class="org.springframework.beans.factory.config.MapFactoryBean">
        <property name="sourceMap">
            <map>
                <entry key-ref="tcLogRealTimeComputationTopic" value-ref="tcLogRealTimeComputationListener"/>
                <entry key-ref="tcLogDataStorageTopic" value-ref="tcLogDataStorageListener"/>
                <entry key-ref="tcApiCallTopic" value-ref="tcApiCallListener"/>
            </map>
        </property>
    </bean>

</beans>