<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="authService" class="com.ysu.zyw.tc.svc.components.security.auth.TcAuthService"/>

    <bean id="shiroRealms"
          parent="abstractAuthorizingRealm"
          class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <bean class="com.ysu.zyw.tc.svc.components.security.shiro.TcUsernamePasswordRealm"/>
                <bean class="com.ysu.zyw.tc.svc.components.security.shiro.TcMobilePasswordRealm"/>
            </list>
        </property>
    </bean>

</beans>