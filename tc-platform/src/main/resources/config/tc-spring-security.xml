<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="authService" class="com.ysu.zyw.tc.svc.components.security.auth.TcAuthService"/>

    <bean id="mobilePasswordRealm"
          parent="abstractAuthorizingRealm"
          class="com.ysu.zyw.tc.svc.components.security.shiro.TcMobilePasswordRealm"/>

    <bean id="usernamePasswordRealm"
          parent="abstractAuthorizingRealm"
          class="com.ysu.zyw.tc.svc.components.security.shiro.TcUsernamePasswordRealm"/>

    <bean id="emailPasswordRealm"
          parent="abstractAuthorizingRealm"
          class="com.ysu.zyw.tc.svc.components.security.shiro.TcEmailPasswordRealm"/>

    <bean id="shiroRealms"
          class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <ref bean="mobilePasswordRealm"/>
                <ref bean="usernamePasswordRealm"/>
                <ref bean="emailPasswordRealm"/>
            </list>
        </property>
    </bean>

</beans>