<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <!-- !!!! Properties !!!! -->
    <properties resource="properties/mbg-config.properties"/>

    <classPathEntry location="${mbg.jdbc.driver}"/>

    <context id="DB2Tables" targetRuntime="MyBatis3">

        <!-- !!!! Plugins !!!! -->
        <plugin type="com.ysu.zyw.tc.components.mbg.TcLombokModelPlugin"/>

        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>

        <plugin type="com.ysu.zyw.tc.components.mbg.TcPaginationPlugin"/>

        <plugin type="com.ysu.zyw.tc.components.mbg.TcSelectPrimaryKeyPlugin"/>

        <plugin type="com.ysu.zyw.tc.components.mbg.TcBatchInsertPlugin"/>

        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!-- !!!! Database Configurations !!!! -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="${mbg.jdbc.url}"
                        userId="${mbg.jdbc.username}"
                        password="${mbg.jdbc.password}">
        </jdbcConnection>

        <!-- !!!! Model Configurations !!!! -->
        <javaModelGenerator targetPackage="${mbg.po.package}"
                            targetProject="${mbg.project.base}/src/main/java">
            <property name="enableSubPackages" value="false"/>
        </javaModelGenerator>

        <!-- !!!! Mapper XML Configurations !!!! -->
        <sqlMapGenerator targetPackage="${mbg.mapper.folder}"
                         targetProject="${mbg.project.base}/src/main/resources">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <!-- !!!! Mapper Interface Configurations !!!! -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="${mbg.interface.package}"
                             targetProject="${mbg.project.base}/src/main/java">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <!-- !!!! Table Configurations !!!! -->
        <table tableName="member_account"
               domainObjectName="TcAccount"
               mapperName="TcAccountMapper">
            <columnOverride column="signin_platform"
                            javaType="com.ysu.zyw.tc.api.dao.penum.TcSigninPlatform"
                            typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
            <columnOverride column="delected"
                            javaType="java.lang.Boolean"/>
        </table>

        <table tableName="member_account_map_permission"
               domainObjectName="TcAccountMapPermission"
               mapperName="TcAccountMapPermissionMapper"/>

        <table tableName="member_account_map_permission_set"
               domainObjectName="TcAccountMapPermissionSet"
               mapperName="TcAccountMapPermissionSetMapper">
        </table>

        <table tableName="member_permission"
               domainObjectName="TcPermission"
               mapperName="TcPermissionMapper">
            <columnOverride column="type"
                            javaType="com.ysu.zyw.tc.api.dao.penum.TcPermissionType"
                            typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
        </table>

        <table tableName="member_permission_set"
               domainObjectName="TcPermissionSet"
               mapperName="TcPermissionSetMapper"/>

        <table tableName="member_permission_set_map_permission"
               domainObjectName="TcPermissionSetMapPermission"
               mapperName="TcPermissionSetMapPermissionMapper"/>

    </context>

</generatorConfiguration>