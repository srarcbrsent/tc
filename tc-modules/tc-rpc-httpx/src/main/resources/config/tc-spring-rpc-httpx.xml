<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="requestConfigBuilder" class="org.apache.http.client.config.RequestConfig.Builder">
        <property name="connectionRequestTimeout" value="${properties.rpc.httpx.connection.request.timeout.ms}"/>
        <property name="socketTimeout" value="${properties.rpc.httpx.socket.timeout.ms}"/>
        <property name="connectTimeout" value="${properties.rpc.httpx.connect.timeout.ms}"/>
    </bean>

    <bean id="httpClientBuilder"
          class="org.apache.http.impl.client.HttpClientBuilder"
          factory-method="create">
        <!-- 请求配置 -->
        <property name="defaultRequestConfig">
            <bean factory-bean="requestConfigBuilder" factory-method="build"/>
        </property>
        <!-- 连接池 -->
        <property name="connectionManager">
            <bean class="org.apache.http.impl.conn.PoolingHttpClientConnectionManager">
                <property name="maxTotal" value="${properties.rpc.httpx.connection.max.total}"/>
                <property name="defaultMaxPerRoute" value="${properties.rpc.httpx.connection.max.per.route}"/>
            </bean>
        </property>
        <!-- 重试策略 -->
        <property name="retryHandler">
            <bean class="org.apache.http.impl.client.DefaultHttpRequestRetryHandler">
                <constructor-arg index="0" value="${properties.rpc.httpx.retry.times}"/>
                <constructor-arg index="1" value="false"/>
            </bean>
        </property>
        <!-- 默认请求头 -->
        <property name="defaultHeaders">
            <list>
                <bean class="org.apache.http.message.BasicHeader">
                    <constructor-arg value="Accept"/>
                    <constructor-arg
                            value="application/json,application/xml;q=0.9,text/html;q=0.8,text/javascript;q=0.7"/>
                </bean>
                <bean class="org.apache.http.message.BasicHeader">
                    <constructor-arg value="User-Agent"/>
                    <constructor-arg
                            value="Mozilla/5.0 (Macintosh; Intel Mac OS X 10_11_4) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/51.0.2704.103 Safari/537.36"/>
                </bean>
                <bean class="org.apache.http.message.BasicHeader">
                    <constructor-arg value="Accept-Encoding"/>
                    <constructor-arg value="gzip,deflate"/>
                </bean>
                <bean class="org.apache.http.message.BasicHeader">
                    <constructor-arg value="Accept-Language"/>
                    <constructor-arg value="zh-CN,zh;q=0.8,en;q=0.6"/>
                </bean>
                <bean class="org.apache.http.message.BasicHeader">
                    <constructor-arg value="Cache-Control"/>
                    <constructor-arg value="no-cache"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="restTemplate" class="org.springframework.web.client.RestTemplate">
        <constructor-arg index="0">
            <bean class="org.springframework.http.client.HttpComponentsClientHttpRequestFactory">
                <constructor-arg>
                    <bean factory-bean="httpClientBuilder" factory-method="build"/>
                </constructor-arg>
            </bean>
        </constructor-arg>
        <!-- 消息转换 -->
        <property name="messageConverters">
            <list>
                <bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
                    <!-- share webmvc object mapper -->
                    <property name="objectMapper"
                              value="#{T(com.ysu.zyw.tc.base.utils.TcSerializationUtils).OBJECT_MAPPER}"/>
                    <property name="supportedMediaTypes">
                        <list>
                            <value>#{T(org.springframework.http.MediaType).APPLICATION_JSON}</value>
                            <value>#{T(org.springframework.http.MediaType).APPLICATION_JSON_UTF8}</value>
                        </list>
                    </property>
                </bean>
                <bean class="org.springframework.http.converter.FormHttpMessageConverter">
                    <property name="supportedMediaTypes">
                        <list>
                            <value>#{T(org.springframework.http.MediaType).APPLICATION_FORM_URLENCODED}</value>
                        </list>
                    </property>
                </bean>
                <bean class="org.springframework.http.converter.StringHttpMessageConverter">
                    <constructor-arg index="0" value="UTF-8"/>
                    <property name="supportedMediaTypes">
                        <list>
                            <value>#{T(org.springframework.http.MediaType).TEXT_HTML}</value>
                        </list>
                    </property>
                </bean>
                <bean class="org.springframework.http.converter.ByteArrayHttpMessageConverter"/>
                <bean class="org.springframework.http.converter.ResourceHttpMessageConverter"/>
            </list>
        </property>
    </bean>

    <bean class="com.ysu.zyw.tc.components.rpc.httpx.TcHttpxService">
        <property name="swallowException" value="${properties.rpc.httpx.swallow.exception}"/>
    </bean>

</beans>