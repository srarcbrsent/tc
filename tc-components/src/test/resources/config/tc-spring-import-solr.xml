<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder file-encoding="UTF-8"
                                  location="classpath*:example/local-data-solr-example.properties"/>

    <bean id="dataSource" class="com.alibaba.druid.pool.DruidDataSource"
          init-method="init" destroy-method="close">
        <property name="url" value="jdbc:mysql://rdb.tc.com:3306/tc_platform"/>
        <property name="username" value="tc_develop"/>
        <property name="password" value="123456"/>
        <property name="maxActive" value="10"/>
        <property name="maxWait" value="5"/>
        <property name="connectProperties">
            <props>
                <prop key="useUnicode">true</prop>
                <prop key="characterEncoding">UTF-8</prop>
                <prop key="zeroDateTimeBehavior">convertToNull</prop>
            </props>
        </property>
    </bean>

</beans>