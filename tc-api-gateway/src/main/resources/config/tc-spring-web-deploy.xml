<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- !!!! Infrastructure !!!! -->

    <!-- thread pool -->
    <bean id="threadPoolTaskScheduler" class="org.springframework.scheduling.concurrent.ThreadPoolTaskScheduler">
        <property name="poolSize" value="5"/>
        <property name="errorHandler">
            <bean class="com.ysu.zyw.tc.components.utils.pool.TcThreadPoolErrorLogHandler"/>
        </property>
    </bean>

    <!-- aop -->
    <aop:aspectj-autoproxy proxy-target-class="true"
                           expose-proxy="true"/>

    <!--- !!!! Swagger !!!! -->
    <bean class="com.ysu.zyw.tc.conf.TcSwaggerConfig">
        <property name="basePackage" value="com.ysu.zyw.tc.web"/>
    </bean>

    <!-- !!!! Import !!!! -->
    <context:property-placeholder file-encoding="UTF-8"
                                  location="${properties.pom.activation.spring.web.profile}"/>

    <!-- !!!! Import !!!! -->
    <import resource="classpath*:/config/tc-spring-web-front-end.xml"/>

</beans>